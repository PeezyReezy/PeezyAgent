# PeezyAgent Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Anthropic API Key for Claude integration
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# Optional: Flask secret key for sessions (will auto-generate if not provided)
FLASK_SECRET_KEY=your-super-secret-key-for-flask-sessions

# Optional: Maximum file upload size (default: 10MB)
# Supported formats: 5MB, 1GB, 2.5TB, etc.
MAX_FILE_SIZE=10MB

# Optional: Supported file extensions (default: .pdf)
SUPPORTED_FILE_TYPES=.pdf

# Optional: Load .env file automatically (default: true)
# Set to false in production environments
LOAD_DOTENV=true